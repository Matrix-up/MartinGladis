@page
@model IndexModel
@{
    ViewData["Title"] = "Strona Główna";
}

    <div class="text-center">
        <br />
        <h3>Wybierz swoje miejsce</h3>
        <br />
        <br />
        <form method="post" name="setPlace">
            <select name="selectedPlace" asp-items="@(new SelectList(Model.displaydata,"id_miejsca","nazwa"))">
                <option value="" selected disabled>-- Wybierz Miejsce --</option>
            </select>
            <br />
            <br />
            <input type="submit" value="Wybierz miejsce"/>
        </form>
        <hr class="bg-white" />

        <br />
        <br />
        @if (Model.state)
        {
            <h2>@Model.nazwa</h2>
            <br />
            <p>Kraj: @Model.kraj</p>
            <p>Miasto: @Model.miasto</p>
            <br />
            <div class="justify-content-center"><img src="@Model.location" width="1000" style="border-top-left-radius: 300px; border-bottom-right-radius: 100px"/></div>
        }

    </div>
